//This if the rules file
// Turn ON the vertical valve every 10 seconds for 10 seconds.
rule "Vertical Valve ON"
when
    Time cron "0,20,40 * * ? * * *"
then
    if (VERTICAL_VALVE_VIRTUAL_SWITCH.state == ON) {
        sendCommand(VERTICAL_VALVE,ON)
    } else {
        /* Disable the vertical valve by default.  */
//        sendCommand(VERTICAL_VALVE,OFF)
    }
end

rule "Vertical Valve OFF"
when
    Time cron "10,30,50 * * ? * * *"
then
    if (VERTICAL_VALVE_VIRTUAL_SWITCH.state == ON) {
        sendCommand(VERTICAL_VALVE,OFF)
    } else {
        /* Disable the vertical valve by default.  */
//        sendCommand(VERTICAL_VALVE,OFF)
    }
end
// Vertical valve activated for 5mins every 6 hours starting at 00h00.
// Cloner water change four times per day.
rule "Vertical Valve and Pump ON"
when
    Time cron "0 0 0/6 ? * * *"
then
    sendCommand(VERTICAL_VALVE,ON)
    sendCommand(VERTICAL_PUMP,ON)
end

rule "Vertical Valve and Pump OFF"
when
    Time cron "0 5 0/6 ? * * *"
then
    sendCommand(VERTICAL_VALVE,OFF)
    sendCommand(VERTICAL_PUMP,OFF)
end

// Cloner pump activated for 10s every 3 hours starting at 00h00.
rule "Cloner Pump ON"
when
    Time cron "0 0 0/3 ? * * *"
then
    sendCommand(CLONER_PUMP,ON)
end

rule "Cloner Pump OFF"
when
    Time cron "10 0 0/3 ? * * *"
then
    sendCommand(CLONER_PUMP,OFF)
end

